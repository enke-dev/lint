{
  "name": "@enke.dev/lint",
  "version": "0.8.3",
  "description": "Meta package to provide linting for web projects",
  "homepage": "https://github.com/enke-dev/lint",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enke-dev/lint.git"
  },
  "files": [
    "eslint.config.d.ts",
    "eslint.config.js",
    "eslint-plugins.d.ts",
    "stylelint.config.d.ts",
    "stylelint.config.js",
    "README.md"
  ],
  "type": "module",
  "main": "eslint.config.js",
  "types": "eslint.config.d.ts",
  "scripts": {
    "lint": "eslint -c eslint.config.ts ./*.config.ts",
    "build": "tsc"
  },
  "author": {
    "name": "David Enke",
    "email": "david@enke.dev"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "eslint": "^9.34.0",
    "prettier": "^3.6.2"
  },
  "optionalDependencies": {
    "stylelint": "^16.23.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0"
  },
  "dependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.34.0",
    "@eslint/json": "^0.13.2",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-extensions": "^0.1.5",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-package-json": "^0.56.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "eslint-plugin-wc": "^3.0.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "devDependencies": {
    "@types/node": "24.3.0",
    "jiti": "2.5.1",
    "typescript": "5.9.2"
  },
  "overrides": {
    "eslint-plugin-unused-imports": {
      "@typescript-eslint/eslint-plugin": "$@typescript-eslint/eslint-plugin"
    },
    "typescript-eslint": {
      "typescript": "$typescript"
    }
  }
}
