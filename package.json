{
  "name": "@enke.dev/lint",
  "version": "0.11.20",
  "description": "Meta package to provide linting for web projects",
  "homepage": "https://github.com/enke-dev/lint",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enke-dev/lint.git"
  },
  "files": [
    "eslint.config.d.ts",
    "eslint.config.js",
    "eslint-plugins.d.ts",
    "prettier.config.d.ts",
    "prettier.config.js",
    "stylelint.config.d.ts",
    "stylelint.config.js",
    "README.md"
  ],
  "type": "module",
  "main": "eslint.config.js",
  "types": "eslint.config.d.ts",
  "scripts": {
    "check": "tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint -c test.eslint.config.ts .",
    "test": "node --experimental-strip-types --test test.run.ts",
    "inspect": "eslint-config-inspector --config eslint.config.ts",
    "dev": "tsc -p tsconfig.build.json --watch",
    "build": "tsc -p tsconfig.build.json"
  },
  "author": {
    "name": "David Enke",
    "email": "david@enke.dev"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "overrides": {
    "eslint": "$eslint",
    "prettier": "$prettier"
  },
  "peerDependencies": {
    "@awmottaz/prettier-plugin-void-html": "^2.0.0",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1"
  },
  "optionalDependencies": {
    "jiti": "^2.6.1",
    "stylelint": "^17.1.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-order": "^7.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@eslint/compat": "2.0.2",
    "@eslint/js": "10.0.1",
    "@eslint/json": "1.0.1",
    "@html-eslint/eslint-plugin": "0.55.0",
    "@html-eslint/parser": "0.55.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-html": "8.1.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-import-extensions": "0.1.5",
    "eslint-plugin-lit": "2.2.1",
    "eslint-plugin-lit-a11y": "5.1.1",
    "eslint-plugin-package-json": "0.88.2",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.4.1",
    "eslint-plugin-wc": "3.1.0"
  },
  "devDependencies": {
    "@awmottaz/prettier-plugin-void-html": "2.0.0",
    "@eslint/config-inspector": "1.4.2",
    "@types/node": "24.10.13",
    "eslint": "10.0.0",
    "jiti": "2.6.1",
    "prettier": "3.8.1",
    "stylelint": "17.3.0",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard-scss": "17.0.0",
    "stylelint-order": "7.0.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0"
  }
}
